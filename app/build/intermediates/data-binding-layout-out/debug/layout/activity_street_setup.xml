<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_street_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.kylezhudev.moveurcars.StreetSetup">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:background="@drawable/background_image"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"/>


    <!-- android:paddingBottom="@dimen/activity_vertical_margin" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/street"
            android:textSize="@dimen/text_size_L"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/et_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/street_hint"
            android:textColorHint="@color/colorTextColorHint"
            android:textSize="@dimen/edit_text_size"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lb_side_of_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/side_of_street"
                android:textSize="@dimen/text_size_L" />

            <Spinner
                android:id="@+id/sp_side_of_street"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="@dimen/spinner_horizontal_margin"
                android:layout_alignBottom="@id/lb_side_of_street"
                android:layout_toEndOf="@id/lb_side_of_street"
                android:layout_alignTop="@id/lb_side_of_street"
                android:maxLines = "1"
                android:ellipsize="marquee"
                />
        </RelativeLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btn_save_street"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_date_and_time"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>


</LinearLayout>
