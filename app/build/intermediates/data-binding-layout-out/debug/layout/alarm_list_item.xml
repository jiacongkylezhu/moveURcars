    <ImageView
        android:id="@+id/img_side_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_side_a" />

    <TextView
        android:id="@+id/lb_next_cleaning_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/img_side_icon"
        android:gravity="top"
        android:text="Next Cleaning Date:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/lb_next_cleaning_date"
        android:gravity="top" />


    <TextView
        android:id="@+id/tv_alarm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lb_next_cleaning_date"

        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_side_icon"
        android:gravity="center_vertical"
        android:text="01/01/2017  3:00 AM"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alarm_date"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_side_icon"
        android:text="1st Thursday of every month"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_street_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_day_of_week"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_side_icon"
        android:gravity="bottom"
        android:text="Street: 25th Ave"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_street_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#808080" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_day_of_week"
        android:background="@drawable/ic_delete_sweep_black_48dp"

        android:visibility="invisible" />


</RelativeLayout>